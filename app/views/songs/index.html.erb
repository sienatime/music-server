<%= javascript_pack_tag 'song_download' %>

<h1>Songs</h1>

<table class="song-list">
<thead>
  <tr>
    <td><input type="checkbox" id="selectAll"/></td>
    <td>Title</td>
    <td>Artist</td>
    <td>Length</td>
    <td>Date Added</td>
  </tr>
</thead>
<tbody>
<% @songs.each do |song| %>
<tr class="song-row">
  <td><input type="checkbox" id="<%= song.id %>" class="checkbox-song"/></td>
  <td><%= song.title %></td>
  <td><%= song.artist.name %></td>
  <td><%= format_song_length(song.length) %></td>
  <td><%= song.created_at.strftime("%b %e") %></td>
</tr>

<% end %>
</tbody>
</table>

<button id="downloadButton" data-url="<%= download_songs_path %>">Download</button>
